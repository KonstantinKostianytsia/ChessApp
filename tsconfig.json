{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "tests": ["tests/*"],
      "components/*": ["src/components/*"],
      "screens/*": ["src/screens/*"],
      "navigation/*": ["src/navigation/*"],
      "models/*": ["src/models/*"],
      "styles/*": ["src/styles/*"],
      "helpers/*": ["src/helpers/*"],
      "stores/*": ["src/stores/*"],
      "assets/*": ["assets/*"]
    }
  }
}
